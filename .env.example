# =============================================================================
# POLICE CAD API - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and update with your actual values
# cp env.example.comprehensive .env

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection URI (local or cloud)
export DB_URI=mongodb://localhost/knoldus
export DB_NAME=knoldus

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
export PORT=8082
export BASE_URL=localhost
export ENV=local
export LOG_LEVEL=debug

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# 256-bit secret key for JWT token generation/validation
# Generate using: https://passwordsgenerator.net/ (256 chars, all options enabled)
# Example: sRqXKbHFdQ8Wka6NWvk3ZaZhY3JD3CnUw7H5B42gETZS8feYUFUJ8k2jRvnNQrLwEyPWnwfuGN9XG3GQaPxC6HdtNNYmbZW6M
export SECRET_KEY='your-256-bit-secret'

# =============================================================================
# STRIPE PAYMENT PROCESSING
# =============================================================================
# Stripe API keys (get from https://dashboard.stripe.com/apikeys)
export STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
export WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs for different subscription tiers
export STRIPE_BASE_MONTHLY_PRICE_ID=price_your_base_monthly_price_id
export STRIPE_BASE_ANNUAL_PRICE_ID=price_your_base_annual_price_id
export STRIPE_PREMIUM_MONTHLY_PRICE_ID=price_your_premium_monthly_price_id
export STRIPE_PREMIUM_ANNUAL_PRICE_ID=price_your_premium_annual_price_id
export STRIPE_PREMIUM_PLUS_MONTHLY_PRICE_ID=price_your_premium_plus_monthly_price_id
export STRIPE_PREMIUM_PLUS_ANNUAL_PRICE_ID=price_your_premium_plus_annual_price_id

# Stripe Promotion Price IDs
export STRIPE_BASIC_PROMOTION_MONTHLY_PRICE_ID=price_your_basic_promotion_monthly_price_id
export STRIPE_STANDARD_PROMOTION_MONTHLY_PRICE_ID=price_your_standard_promotion_monthly_price_id
export STRIPE_PREMIUM_PROMOTION_MONTHLY_PRICE_ID=price_your_premium_promotion_monthly_price_id
export STRIPE_ELITE_PROMOTION_MONTHLY_PRICE_ID=price_your_elite_promotion_monthly_price_id

# =============================================================================
# EMAIL SERVICES (SENDGRID)
# =============================================================================
# SendGrid API key for email notifications
# Get from: https://app.sendgrid.com/settings/api_keys
export SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# =============================================================================
# CLOUDINARY FILE UPLOAD
# =============================================================================
# Cloudinary credentials for file uploads
# Get from: https://cloudinary.com/console
export CLOUDINARY_UPLOAD_PRESET=your_upload_preset_name
export CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# URL mode for testing (set to "testing" for local development)
export URL_MODE=testing

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================
# Add any additional environment variables here as needed

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================
# For production deployment:
# 1. Set ENV=production
# 2. Use production MongoDB URI
# 3. Use production Stripe keys (sk_live_...)
# 4. Set proper BASE_URL for your domain
# 5. Ensure all secrets are properly secured 